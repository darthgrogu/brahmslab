<?xml version="1.0" encoding="utf-8"?>
<winex:WindowEx
    x:Class="BrahmsLab.WinUi3App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BrahmsLab.WinUi3App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:winex="using:WinUIEx"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:views="using:BrahmsLab.WinUi3App.Views"
    mc:Ignorable="d"
    Title="Brahms Lab"
    MinWidth="1024"
    MinHeight="768">

    <winex:WindowEx.SystemBackdrop>
        <MicaBackdrop />
    </winex:WindowEx.SystemBackdrop>

    <Grid>
        <NavigationView x:Name="NavigationViewControl"
                        IsSettingsVisible="True"
                        PaneDisplayMode="LeftCompact"
                        IsTitleBarAutoPaddingEnabled="True"
                        IsBackEnabled="{x:Bind ContentFrame.CanGoBack, Mode=OneWay}"
                        BackRequested="NavigationViewControl_BackRequested">

            <NavigationView.MenuItems>
                <NavigationViewItemHeader Content="Modules"/>
                <NavigationViewItem Content="Spectral Scan" Tag="SpectralScanPage" Icon="Document"/>
                <NavigationViewItem Content="Plant Photography" Tag="PhotographyPage" Icon="Camera"/>
                <NavigationViewItem Content="Mapping" Tag="MappingPage" Icon="Map"/>
            </NavigationView.MenuItems>

            <Frame x:Name="ContentFrame" Navigated="ContentFrame_Navigated"/>
            
        </NavigationView>

        <Grid
            x:Name="AppTitleBar"
            Height="48"
            Margin="48,0,0,0"
            VerticalAlignment="Top"
            Padding="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Image
                x:Name="AppFontIcon"
                Width="16"
                Height="16"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Source="/Assets/logo.png" />
            <TextBlock
                Margin="12,0,0,0"
                Grid.Column="1"
                VerticalAlignment="Center"
                Style="{StaticResource CaptionTextBlockStyle}"
                Text="Titlebar DarthGrogu"/>
        </Grid>
        
    </Grid>

</winex:WindowEx>
