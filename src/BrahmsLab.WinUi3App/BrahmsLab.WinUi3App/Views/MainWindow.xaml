<?xml version="1.0" encoding="utf-8"?>
<winex:WindowEx
    x:Class="BrahmsLab.WinUi3App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BrahmsLab.WinUi3App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:winex="using:WinUIEx"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:views="using:BrahmsLab.WinUi3App.Views"
    mc:Ignorable="d"
    Title="Brahms Lab"
    MinWidth="1024"
    MinHeight="768">

    <winex:WindowEx.SystemBackdrop>
        <MicaBackdrop />
    </winex:WindowEx.SystemBackdrop>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <views:SpectralScanFormView Grid.Column="0" DataContext="{x:Bind ViewModel.SpectralScanForm}" />

        <Grid Grid.Column="1" Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
            <TextBlock Text="History and Graph will appear here..." 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</winex:WindowEx>
