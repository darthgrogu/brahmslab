<?xml version="1.0" encoding="utf-8"?>
<winex:WindowEx
    x:Class="BrahmsLab.WinUi3App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BrahmsLab.WinUi3App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:winex="using:WinUIEx"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Brahms Lab"
    MinWidth="1024"
    MinHeight="768">

    <winex:WindowEx.SystemBackdrop>
        <MicaBackdrop />
    </winex:WindowEx.SystemBackdrop>

    <Grid RowDefinitions="*, Auto">

        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">

            <TextBlock Text="Current Status:"
                   FontSize="18"
                   HorizontalAlignment="Center"/>

            <TextBlock Text="{x:Bind ViewModel.StatusText, Mode=OneWay}"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"/>

            <Button Content="Execute Status Update"
                Command="{x:Bind ViewModel.UpdateStatusCommand}"
                HorizontalAlignment="Center"
                Padding="20,10"
                Margin="0,20,0,0"/>

        </StackPanel>

    </Grid>
</winex:WindowEx>
